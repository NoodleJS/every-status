clearfix()
  &:before
      content "."
      visibility hidden

.piece
  display: table
  width: 100%
  height: 100%
  position: absolute
  top: 0
  .piece-inner
    display: table-cell
    vertical-align: middle
  .piece-main
    position: relative
    margin: 0 auto
    width: 480px
  .piece-main .card
    position: relative
    z-index: 5
    padding: 40px 40px 20px 40px
    background-color: #fff
    box-shadow: 0 0 20px 0 rgba(0,0,0,0.3)
  .content
    padding-bottom: 10px
    word-wrap: break-word
  .by
    text-align: right
    padding-bottom: 10px
  .link
    color: #fff
    font-size: 20px
    width: 24px
    height: 24px
    position: absolute
    display: block
    text-align: center
    top: 0
    right: -30px
    padding: 3px
    background-color: rgb(139, 163, 103)

.piece .favs
  clearfix()
  margin-top: 15px
  .bd
    position: relative
  .like-wrap
    margin-right: 5px
    padding-right: 5px
    border-right: 1px dashed #ccc
    background: #fff
    float: left
  .icon-heart
    font-size: 24px
    display: block
    cursor: pointer
    transition: color .25s linear
    &.liked
      color: rgb(248,93,88)
  .people
    clearfix()
    overflow: hidden
    height: 24px
    position: relative
    float: left
    ul
      float:left
      margin-left: -29px
      transition: margin .25s linear
      &.liked
        margin-left: 0;
    .fav-count
      font-size:13px
      line-height: 24px
      color:#999
      margin-left:8px
      float:left
      .count
        margin: 0 3px
  li
    float: left
    margin-right: 5px
  img
    display: block
    width: 24px
    height: 24px
    border-radius: 50%

.withpic
  padding-bottom: 80px
  padding-top: 30px
  position: static
  .pics
    position: relative
    .last,
    .next
      position: absolute
      top: 50%
      display: none
      color: #333
    .last
      left: -20px
    .next
      right: -20px
    img
      width: 100%

.box-title
  color: #fff
  background-color: rgb(60, 58, 55)
  padding: 10px

.box-login-body
  text-align: center

.box-login-body .login_douban
  margin-right: 10px

.box-login-body .login_weibo
  margin-left: 10px


/* for iphone */
@media (max-width: 480px)
  .piece
    .piece-main
      width: auto
      box-sizing: border-box
      margin: 0 10px
    .link
      top: -27px
      right: 0
  .people ul
    width:29px * 3