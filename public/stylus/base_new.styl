body
  font-family "Helvetica Neue",Helvetica,Arial,sans-serif
  color #444
  font-size 100%
  text-rendering optimizeLegibility
  background #fff

#hd
  width 100%
  height 50px
  line-height 50px
  background #333
  z-index 9997
  #header-inner
    position relative
    max-width 970px
    margin 0 auto
    padding 0 12px
    .tt
      float left
      color #fff
    ul#nav
      margin 0 
      padding 0
      li
        float left
        margin-left 10px
        font-size 90%
        a
          color #999
          &:hover
            color #ddd
    .account
      float right
      position relative
      &:hover
        ul.menu
          display block
      .avatar
        width 30px
        height 30px
        vertical-align middle
        float right
        margin 10px
      a
        display block
        width 100px
        text-align center
        color #999
        font-size 90%
        &:hover
          color #ddd
      ul.menu
        width 100px
        display none
        background #333
        border-radius 6px
        border-top-left-radius 0
        border-top-right-radius 0
        position absolute
        z-index 999
        li
          border-bottom 1px dotted #fff
          height 30px
          line-height 30px
          text-align center
          &:hover
            background-color rgba(255,255,255,0.1)
          a
            font-size 90%
            color #999
            &:hover
              color #ddd
          &:last-child
            border-bottom none
          a
            img 
              width 24px
              height 24px
              margin 8px 13px 
#wrap
  background url(img/bg.gif)
  margin 0
  padding 10px
  width 100%
  overflow hidden
  .container
    width 970px
    margin 0 auto
  ul.pieces
    width 100%
    margin 3% 0
    overflow hidden
    border-radius 3px
    li
      float left
      width 22.680412371134%
      margin-right 3.092783505155%
      margin-bottom 3.092783505155%
      position relative
      p.layer
        opacity 0
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin 0
        padding 20px
        font-size 12px
        line-height 2
        text-decoration none
        color #888
        background #fff
        background rgba(255,255,255,0.96)
        overflow hidden
        z-index 3
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        img 
          margin-top 4px
          vertical-align middle
          margin-right 10px
          margin-left 22px
          &.heart
            width 28px
            height 28px
          &.pen
            width 20px
            height 20px
          &.col
            width 22px
            height 22px
        span
          display block
          font-size 14px
          position absolute
          bottom 15px
          left 55px
        em
          display block
          position absolute
          bottom 10px
          left 55px
      &:hover
        p.layer
          opacity 1
      &:nth-child(4n)
        margin-right 0
      .content
        position relative
        clear left
        background #fff
        padding 10px
