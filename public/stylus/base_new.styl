body
  font-family "Helvetica Neue",Helvetica,Arial,sans-serif
  color #444
  font-size 100%
  text-rendering optimizeLegibility
  background #fff

#hd
  width 100%
  height 50px
  line-height 50px
  background #333
  z-index 9997
  #header-inner
    position relative
    max-width 970px
    margin 0 auto
    padding 0 12px
    .tt
      float left
      color #fff
    ul#nav
      margin 0 
      padding 0
      li
        float left
        margin-left 10px
        font-size 90%
        a
          color #999
          &:hover
            color #ddd
    .account
      float right
      position relative
      &:hover
        ul.menu
          display block
      .avatar
        width 30px
        height 30px
        vertical-align middle
        float right
        margin 10px
      a
        display block
        width 100px
        text-align center
        color #999
        font-size 90%
        &:hover
          color #ddd
      ul.menu
        width 100px
        display none
        background #333
        border-radius 6px
        border-top-left-radius 0
        border-top-right-radius 0
        position absolute
        z-index 999
        li
          border-bottom 1px dotted #fff
          height 30px
          line-height 30px
          text-align center
          &:hover
            background-color rgba(255,255,255,0.1)
          a
            font-size 90%
            color #999
            &:hover
              color #ddd
          &:last-child
            border-bottom none
          a
            img 
              width 24px
              height 24px
              margin 8px 13px 
#wrap
  background url(img/bg.gif)
  margin 0
  padding 10px
  width 100%
  overflow hidden
  .container
    width 970px
    margin 0 auto
  ul.pieces
    width 100%
    margin 3% 0
    overflow hidden
    border-radius 3px
    li
      float left
      width 22.680412371134%
      margin-right 3.092783505155%
      &:nth-child(4n)
        margin-right 0
      .content
        position relative
        clear left
        background #fff
        padding 10px
          



