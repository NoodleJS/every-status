.pages
  position: relative
  margin: 10px 15px

.pages .num
  top: 0
  height: 20px
  position: absolute
  color: rgb(60, 58, 55)
  font-size: 12px

.pages .prev
  left: -10px
  border-radius: 3px 0 0 3px

.pages .current
  font-size: 12px
  color: rgb(156, 147, 130)
  text-align: center

.pages .next
  right: -10px
  border-radius: 0 3px 3px 0
