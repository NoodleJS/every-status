box_padding = 20px
textarea_height = 110px

.new-form
  margin: 0 auto
  margin-top: 15px
  width: 500px
  .box-text
    position: relative
    padding: box_padding
    background-color: #fff
    .textarea
      box-sizing: border-box
      width: 100%
      height: textarea_height
      margin-bottom: 10px
    .input
      box-sizing: border-box
      width: 100%
    .funcs
      clearfix()
      position: absolute
      top: textarea_height + box_padding - 27
      left: box_padding + 5
      cursor: pointer
      li
        float:left
        color: #999
        font-size: 24px
  .box-bottom
    clearfix()
    background-color: rgb(60, 58, 55)
    padding: 0 20px 15px 20px
    .btn
      -webkit-appearance: none
      border: none
      color: rgb(235,235,235)
      background-color: rgb(97, 85, 74)
      float: right
      padding: 6px 8px
      font-size: 18px
      border-radius: 0 0 3px 3px
      margin: 0
    .share input
      display: none

.private-setting
  float: left
  margin-top: 5px
  .private-label
    color: #fff
    font-size: 12px
    cursor: pointer


@import "mod/share"


/* for iphone */
@media (max-width: 480px)
  .new-form
    width: auto
    margin: 10px
  .new-form .box-text
    padding: 10px