@import nib
.new-form
  margin: 20px auto 0 auto
  width: 500px
  .box-text
    padding: 20px
    background-color: #fff
    .textarea
      width: 448px
      height: 110px
      margin-bottom: 10px
    .input
      width: 448px
  .box-bottom
    clearfix()
    background-color: rgb(60, 58, 55)
    padding: 0 20px 15px 20px
    .btn
      border: none
      color: rgb(235,235,235)
      background-color: rgb(97, 85, 74)
      float: right
      padding: 6px 8px
      font-size: 18px
      border-radius: 0 0 3px 3px
      margin: 0
    .share input
      display: none

.private-setting
  float: left
  margin-top: 5px
  .private-label
    color: #fff
    font-size: 12px
    cursor: pointer


