#bd
  position: relative
  width: 400px

#people
  position: fixed
  text-align: center
  top: 75px
  left: 50%
  margin-left: -280px
  .share
    margin-right: 0
    float: none
  .avatar img
    width: 40px
    height: 40px
    border-radius: 20px

.empty
  text-align: center
  height: 400px
  line-height: 400px

.favs
  .piece
    margin: 15px 0
    position: relative
    background-color: #fff
  .del
    position: absolute
    top: 0
    right: 0px
    width: 20px
    height: 20px
    line-height: 20px
    cursor: pointer
    color: #fff
    background-color: rgb(160, 0, 0)
    text-align: center
    z-index: 0
  .piece-body
    padding: 20px 20px 15px 20px
    position: relative
    z-index: 5
    background: #fff
  .content
    padding-bottom: 10px
    word-wrap: break-word
    a
      color: #333
  .info
    clearfix()
  .private
    color: #999
    font-size: 12px
    float: left
  .addtime
    color: #999
    font-size: 12px
    float: right

@import "mod/paginate"
@import "mod/share"


/* for iphone */
@media (max-width: 480px)
  .favs
    margin: 0 10px