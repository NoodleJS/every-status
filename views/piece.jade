extends layout

block content



    .piece(class= piece.pics ? 'withpic' : '' )
      .piece-inner
        .piece-main
          .card
            .content= piece.content
            if piece.author_name || piece.work_title
              if piece.author_name
                .by= piece.author_name
              if piece.work_title
                .by= piece.work_title
            if piece.pics
              .pics
                a(href='javascript:;').last
                  i.icon-chevron-left
                ul
                  for pic in piece.pics
                    li
                      a(href='javascript:;',target='_blank',title='查看全图')
                        img(src="http://huixiang.qiniudn.com/")
                a(href='javascript:;').next
                  i.icon-chevron-right
            .favs
              a.like-wrap
                i.icon-heart(data-id="#{piece.id}")
              .people
                ul(class= liked ? 'liked' : 'liked')
                  if user
                    li
                      a(href="/people/#{user}")
                        img(src="#{user.avatar}")
                  for faver in favs
                    if (user.id!=faver.id)
                      li
                        a(href="/people")
                          img(src="#{user.avatar}")
                  if fav_count
                    .fav-count 等
                      span.count #{fav_count}人喜欢

